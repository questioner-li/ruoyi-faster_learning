<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.system.mapper.HisDepartmentMapper">
    
    <resultMap type="HisDepartment" id="HisDepartmentResult">
        <result property="departmentId"    column="department_id"    />
        <result property="departmentName"    column="department_name"    />
        <result property="departmentCode"    column="department_code"    />
        <result property="departmentNum"    column="department_num"    />
        <result property="departmentPerson"    column="department_person"    />
        <result property="departmentPhone"    column="department_phone"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectHisDepartmentVo">
        select department_id, department_name, department_code, department_num, department_person, department_phone, status, create_by, create_time, update_by, update_time, remark from his_department
    </sql>

    <select id="selectHisDepartmentList" parameterType="HisDepartment" resultMap="HisDepartmentResult">
        <include refid="selectHisDepartmentVo"/>
        <where>  
            <if test="departmentName != null  and departmentName != ''"> and department_name like concat('%', #{departmentName}, '%')</if>
            <if test="departmentCode != null  and departmentCode != ''"> and department_code = #{departmentCode}</if>
            <if test="departmentNum != null  and departmentNum != ''"> and department_num = #{departmentNum}</if>
            <if test="departmentPerson != null  and departmentPerson != ''"> and department_person = #{departmentPerson}</if>
            <if test="departmentPhone != null  and departmentPhone != ''"> and department_phone = #{departmentPhone}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectHisDepartmentByDepartmentId" parameterType="Long" resultMap="HisDepartmentResult">
        <include refid="selectHisDepartmentVo"/>
        where department_id = #{departmentId}
    </select>
        
    <insert id="insertHisDepartment" parameterType="HisDepartment" useGeneratedKeys="true" keyProperty="departmentId">
        insert into his_department
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="departmentName != null and departmentName != ''">department_name,</if>
            <if test="departmentCode != null and departmentCode != ''">department_code,</if>
            <if test="departmentNum != null and departmentNum != ''">department_num,</if>
            <if test="departmentPerson != null and departmentPerson != ''">department_person,</if>
            <if test="departmentPhone != null and departmentPhone != ''">department_phone,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="departmentName != null and departmentName != ''">#{departmentName},</if>
            <if test="departmentCode != null and departmentCode != ''">#{departmentCode},</if>
            <if test="departmentNum != null and departmentNum != ''">#{departmentNum},</if>
            <if test="departmentPerson != null and departmentPerson != ''">#{departmentPerson},</if>
            <if test="departmentPhone != null and departmentPhone != ''">#{departmentPhone},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateHisDepartment" parameterType="HisDepartment">
        update his_department
        <trim prefix="SET" suffixOverrides=",">
            <if test="departmentName != null and departmentName != ''">department_name = #{departmentName},</if>
            <if test="departmentCode != null and departmentCode != ''">department_code = #{departmentCode},</if>
            <if test="departmentNum != null and departmentNum != ''">department_num = #{departmentNum},</if>
            <if test="departmentPerson != null and departmentPerson != ''">department_person = #{departmentPerson},</if>
            <if test="departmentPhone != null and departmentPhone != ''">department_phone = #{departmentPhone},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where department_id = #{departmentId}
    </update>

    <delete id="deleteHisDepartmentByDepartmentId" parameterType="Long">
        delete from his_department where department_id = #{departmentId}
    </delete>

    <delete id="deleteHisDepartmentByDepartmentIds" parameterType="String">
        delete from his_department where department_id in 
        <foreach item="departmentId" collection="array" open="(" separator="," close=")">
            #{departmentId}
        </foreach>
    </delete>
</mapper>